<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="411dp"
        android:layout_height="743dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="371dp"
            android:layout_height="630dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="40dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="207dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rellay_jugon"
                    android:layout_width="191dp"
                    android:layout_height="match_parent"
                    android:background="@color/blue">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="46dp">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="93dp"
                            android:layout_height="88dp"
                            android:layout_above="@+id/textView"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="46dp"
                            android:layout_marginBottom="-2dp"
                            app:srcCompat="@drawable/jugon" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="62dp"
                            android:layout_height="34dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="55dp"
                            android:layout_marginBottom="5dp"
                            android:text="Jugon"
                            android:textSize="20sp" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rellay_lento"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/blue_dark">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="44dp">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="66dp"
                            android:layout_height="39dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="59dp"
                            android:layout_marginBottom="2dp"
                            android:text="Lento"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="93dp"
                            android:layout_height="88dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="48dp"
                            app:srcCompat="@drawable/lento" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="184dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rellay_epico"
                    android:layout_width="193dp"
                    android:layout_height="match_parent"
                    android:background="@color/red">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="34dp">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="69dp"
                            android:layout_height="47dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="55dp"
                            android:layout_marginBottom="-12dp"
                            android:text="Epico"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="93dp"
                            android:layout_height="88dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="44dp"
                            app:srcCompat="@drawable/epico" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rellay_sostenible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/red_dark">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="34dp">


                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="129dp"
                            android:layout_height="41dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="-12dp"
                            android:text="Sostenible"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="93dp"
                            android:layout_height="88dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="44dp"
                            app:srcCompat="@drawable/sostenible" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rellay_legendario"
                    android:layout_width="193dp"
                    android:layout_height="match_parent"
                    android:background="@color/green">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="34dp">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="49dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="44dp"
                            android:layout_marginBottom="-12dp"
                            android:text="Legendario"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="93dp"
                            android:layout_height="88dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="44dp"
                            app:srcCompat="@drawable/legendario" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rellay_crack"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/green_dark">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="34dp">


                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="69dp"
                            android:layout_height="47dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="55dp"
                            android:layout_marginBottom="-12dp"
                            android:text="Crack"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="93dp"
                            android:layout_height="88dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="44dp"
                            app:srcCompat="@drawable/crack" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>